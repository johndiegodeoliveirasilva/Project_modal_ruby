<div class="container-fluid">
  <div class="row">
    <div class="col-md-7">
      <%= image_tag(@user.avatar.variant(resize_to_limit: [400, 350])) %>
    </div>
    <div class="col-md-5">
      <h1><%= @user.name %></h1>
      <hr>
      <h2><%= @user.age %></h2>
      <hr>
      <h2><%= @user.email %></h2>
      <hr>
      <h2><%= @user.bio %></h2>
    </div>
  </div>
  <br>
  <ul>
    <li><%= link_to "Edit", edit_user_path(@user) %></li>
    <li><%= link_to "Destroy", user_path(@user),
                    method: :delete,
                    data: { confirm: "Are you sure ?"} %></li>
  </ul>
</div>